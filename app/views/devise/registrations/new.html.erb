<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:"form-size"}) do |f| %>
  <%= devise_error_messages! %>
  <h2>Sign up</h2>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    <small id="passwordHelp" class="form-text text-muted">Password needs to contain at least <%= @minimum_password_length %> characters</small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
  <div class="devise-shared">
  <%= render "devise/shared/links" %>
  </div>
<% end %>
